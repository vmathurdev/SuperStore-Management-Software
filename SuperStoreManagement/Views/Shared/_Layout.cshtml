@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SuperStoreManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div>
                <div class="container" style="float:left">
                    <a style="float:left" class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SuperStoreManagement</a>
                    <button style="float:left" class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div style="float:left" class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                        </ul>
                        @if (String.IsNullOrEmpty(Html.Raw(HttpContextAccessor.HttpContext.Request.Cookies["UserId"]).ToString()))
                        {
                            <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item">
                                    <a align="right" style="float:right; " class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Login">Login</a>
                                </li>

                            </ul>
                        }
                        else
                        {
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a style="float:left" class="nav-link text-dark" asp-area="" asp-controller="order" asp-action="Index">Order History</a>
                        </li>
                        <li class="nav-item">
                            <a style="float:left" class="nav-link text-dark" asp-area="" asp-controller="Carts" asp-action="Index">Cart</a>
                        </li>
                        <li class="nav-item">
                            <a style="float:left" class="nav-link text-dark">@Html.Raw(HttpContextAccessor.HttpContext.Request.Cookies["UserName"])</a>
                        </li>
                        <li class="nav-item">
                            <a style="float:left" class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Logout">Logout</a>
                        </li>
                    </ul>
                        }
                    </div>
                </div>


                <!--  <div style="float:left">
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account/Login" asp-action="Index">Home</a>
                            </li>
                        </ul>
                    </div>
                </div>-->
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - SuperStoreManagement - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
